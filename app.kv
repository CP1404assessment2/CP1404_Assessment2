# create your Kivy layout in the kv language here
BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5
            Label:
                text: 'Sort by:'
                on_press: app.list_required()
            Button:
                text: 'Artist'
                on_press: app.list_completed()
            Label:
                text: 'Add New Song...'
            Label:
                text: 'Title:'
            TextInput:
                id: Title
                text: ''
            Label:
                text: 'Artist:'
            TextInput:
                id: Artist
                text: ''
            Label:
                text: 'Year:'
            TextInput:
                id: Year
                text: ''
            Button:
                text: 'Add Song'
                on_press: app.new_songs()
            Button:
                text: 'Clear'
                on_press: app.clear()
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: front_label
                size_hint_y: 0.1
            BoxLayout:
                orientation: 'vertical'
                id: entriesBox
            Label:
                id: bottom_label
                text: " "
                size_hint_y: 0.1
